atom (@a, @b)

rule Equality
  (@a, @b) = (@c, @d) →
  \let use #module_of(@a)::{ Equality } in  ;; unstable
    { @a = @c } and
  \let use #module_of(@b)::{ Equality } in  ;; unstable
    { @b = @d }

rule First
  first of (@a, @_) → @a

rule Second
  second of (@_, @b) → @b

rule Map
  map @f @g over (@a, @b) → (@f @a, @g @b)
  map @f over first of @p → map @f Fun::identity over @p
  map @f over second of @p → map Fun::identity @f over @p
  map @f over both of @p → map @f @f @p
